{{ header }}
<div id="affiliate-login" class="container">
	{{ oct_breadcrumbs }}
	<div class="row">
		<div class="col-lg-12">
			<h1 class="fm-main-title fm-page-title">{{ heading_title }}</h1>
		</div>
	</div>
	<div class="content-top-box">{{ content_top }}</div>
	{% if success %}
	<script>
	fmNotify('success', '{{ success }}');
	</script>
	{% endif %}
	{% if error_warning %}
	<script>
	fmNotify('warning', '{{ error_warning }}');
	</script>
	{% endif %}
	<div class="row no-gutters">
	    <div id="content" class="col-12">
    		<div class="fm-content fm-acc-login-content d-flex">
			    <div class="fm-acc-info-right">
		            <div class="fm-content-title fm-content-acc-title">{{ text_returning_affiliate }}</div>
		            <form action="{{ action }}" method="post" enctype="multipart/form-data">
			            <div class="form-group">
			                <label class="fm-control-label" for="input-email">{{ entry_email }}</label>
			                <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
			            </div>
			            <div class="form-group">
			                <label class="fm-control-label" for="input-password">{{ entry_password }}</label>
			                <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control" />
			            </div>
			            <div class="btn-group d-flex justify-content-between align-items-center">
							<input type="submit" value="{{ button_login }}" class="fm-btn fm-btn-blue" />
			                <a href="{{ forgotten }}" class="fm-acc-info-link">{{ text_forgotten }}</a>
			            </div>
			            {% if redirect %}
			            <input type="hidden" name="redirect" value="{{ redirect }}" />
			            {% endif %}
		            </form>
			    </div>
		        <div class="fm-content-border"></div>	
		        <div class="fm-acc-info-left d-flex flex-column justify-content-between">
			        <div class="fm-acc-info-left-desc">
			            <div class="fm-acc-info-text">{{ text_description }}</div>
			            <div class="fm-acc-info-text">{{ text_register_account }}</div>
			        </div>
		            <div class="btn-group mt-4">
		            	<a href="{{ register }}" class="fm-btn fm-btn-blue">{{ button_continue }}</a>
		            </div>
		        </div>
	        </div>
	    </div>
	</div>
	{{ content_bottom }}
</div>
{{ footer }}