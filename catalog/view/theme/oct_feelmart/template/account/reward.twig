{{ header }}
<div id="account-reward" class="container">
	{{ oct_breadcrumbs }}
	<div class="row">
		<div class="col-lg-12">
			<h1 class="fm-main-title fm-page-title">{{ heading_title }}</h1>
		</div>
	</div>
	<div class="content-top-box">{{ content_top }}</div>
	<div id="content" class="row no-gutters">
		{{ column_left }}
	    {% if column_left and column_right %}
	    {% set class = 'col-lg-6' %}
	    {% elseif column_left or column_right %}
	    {% set class = 'col-lg-9' %}
	    {% else %}
	    {% set class = 'col-lg-12' %}
	    {% endif %}
	    <div class="{{ class }}">
		    <div class="fm-content fm-account-content h-100">
		      <div class="fm-content-title fm-content-acc-title">{{ text_total }} <b>{{ total }}</b>.</div>
		      <div class="table-responsive-md fm-table-box">
		        <table class="table table-hover">
		          <thead class="thead-dark">
		            <tr>
		              <th>{{ column_date_added }}</th>
		              <th>{{ column_description }}</th>
		              <th>{{ column_points }}</th>
		            </tr>
		          </thead>
		          <tbody>
		          {% if rewards %}
		          {% for reward in rewards %}
		          <tr>
		            <td>{{ reward.date_added }}</td>
		            <td>{% if reward.order_id %} <a href="{{ reward.href }}">{{ reward.description }}</a> {% else %}
		              {{ reward.description }}
		              {% endif %}</td>
		            <td>{{ reward.points }}</td>
		          </tr>
		          {% endfor %}
		          {% else %}
		          <tr>
		            <td colspan="3">{{ text_empty }}</td>
		          </tr>
		          {% endif %}
		            </tbody>
		        </table>
		      </div>
		      <div class="row mb-4">
		        <div class="col-sm-6 text-left">{{ pagination }}</div>
		        <div class="col-sm-6 text-right">{{ results }}</div>
		      </div>
		      <div class="buttons">
		        <a href="{{ continue }}" class="fm-btn fm-btn-blue">{{ button_continue }}</a>
		      </div>
		    </div>
	    </div>
	    {{ column_right }}
	</div>
	{{ content_bottom }}
</div>
{{ footer }}