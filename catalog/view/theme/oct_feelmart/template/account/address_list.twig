{{ header }}
<div id="account-address" class="container">
	{{ oct_breadcrumbs }}
	<div class="row">
		<div class="col-lg-12">
			<h1 class="fm-main-title fm-page-title">{{ text_address_book }}</h1>
		</div>
	</div>
	<div class="content-top-box">{{ content_top }}</div>
	{% if success %}
	<script>
	fmNotify('success', '{{ success }}');
	</script>
	{% endif %}
	{% if error_warning %}
	<script>
	fmNotify('warning', '{{ error_warning }}');
	</script>
	{% endif %}
	<div id="content" class="row no-gutters">
		{{ column_left }}
	    {% if column_left and column_right %}
	    {% set class = 'col-lg-6' %}
	    {% elseif column_left or column_right %}
	    {% set class = 'col-lg-9' %}
	    {% else %}
	    {% set class = 'col-lg-12' %}
	    {% endif %}
	    <div class="{{ class }}">
		    <div class="fm-content h-100">
		      {% if addresses %}
		      {% for result in addresses %}
		      <div class="fm-acc-info-block fm-acc-address-list-item">
		      	<div class="fm-acc-info-block-top d-flex justify-content-between align-items-center">
		      		<a href="{{ result.update }}" class="fm-acc-info-link">{{ button_edit }}</a>
		      		<a href="{{ result.delete }}" class="fm-acc-del-btn d-flex align-items-center"><i class="fas fa-times"></i><span>{{ button_delete }}</span></a>
		      	</div>
	      		<div class="fm-acc-info-list">
	      			<div class="fm-acc-info-text">{{ result.address }}</div>
	      		</div>
		      </div>
		      {% endfor %}
		      {% else %}
		      <div class="fm-content-text">{{ text_empty }}</div>
		      {% endif %}
	          <a href="{{ add }}" class="fm-btn fm-btn-blue">+ {{ button_new_address }}</a>
		    </div>
	    </div>
	    {{ column_right }}
	</div>
	{{ content_bottom }}
</div>
{{ footer }}