{% if oct_banner_pluss|length <= 2 %}
<div class="fm-banner-plus-box">
	<div class="row{% if position == 'column_left' or position == 'column_right' %} fm-module-column-box{% else %} row-padding-top no-gutters{% endif %}">
		{% set key = 0 %}
		{% for banner in oct_banner_pluss %}
		{% set key = key + 1 %}
		{% if oct_banner_pluss|length == 1 %}
		<div id="oct_banner_plus_{{ module }}_{{ key }}" class="col-lg-12">
			<div class="fm-banner-plus-wrap">
				<div class="fm-banner-plus-title">{{ banner.title }}</div>
	            <div class="fm-banner-plus-info d-flex justify-content-between align-items-center fm-banner-plus-content">
		            <div class="fm-banner-plus-info">
		                <div class="fm-banner-plus-text">{{ banner.description }}</div>
		                <a href="{{ banner.link }}" class="fm-banner-plus-btn fm-btn">{{ banner.button }}</a>
		            </div>
		            <div class="fm-banner-plus-img">
		                <img src="{{ banner.image }}"{% if oct_lazyload is defined and oct_lazyload %} data-srcset="{{ banner.image }} 100w" srcset="{{ oct_lazy_image }} 100w" sizes="100vw" class="oct-lazy"{% endif %} alt="{{ banner.title }}" title="{{ banner.title }}" />
		            </div>
	            </div>
			</div>
		</div>
		{% elseif oct_banner_pluss|length == 2 %}
		<div id="oct_banner_plus_{{ module }}_{{ key }}" class="{% if loop.index == 1 %} col-md-12 col-lg-7{% elseif loop.index == 2 %} col-md-12 col-lg-5 fm-banner-plus-second{% endif %}">
			<div class="fm-banner-plus-wrap h-100">
				<div class="fm-banner-plus-title">{{ banner.title }}</div>
				<div class="d-flex justify-content-between align-items-center fm-banner-plus-content">
					<div class="fm-banner-plus-info">
		                <div class="fm-banner-plus-text">
		                	<p>{{ banner.description }}</p>
		                </div>
		                <a href="{{ banner.link }}" class="fm-banner-plus-btn fm-btn">{{ banner.button }}</a>
		            </div>
		            <div class="fm-banner-plus-img">
		                <img src="{{ banner.image }}"{% if oct_lazyload is defined and oct_lazyload %} data-srcset="{{ banner.image }} 100w" srcset="{{ oct_lazy_image }} 100w" sizes="100vw" class="oct-lazy"{% endif %} alt="{{ banner.title }}" title="{{ banner.title }}" />
		            </div>
				</div>
			</div>
		</div>
		{% endif %}
		<style>
			#oct_banner_plus_{{ module }}_{{ key }} .fm-banner-plus-wrap {background: {{ banner.background_color }};}
			#oct_banner_plus_{{ module }}_{{ key }} .fm-banner-plus-title {color: {{ banner.title_color }};}
			#oct_banner_plus_{{ module }}_{{ key }} .fm-banner-plus-text {color: {{ banner.text_color }};}
			#oct_banner_plus_{{ module }}_{{ key }} .fm-banner-plus-btn {color: {{ banner.button_color }}; background: {{ banner.button_background }};}
			#oct_banner_plus_{{ module }}_{{ key }} .fm-banner-plus-btn:hover {color: {{ banner.button_text_hover }}; background: {{ banner.button_background_hover }};}
		</style>
		{% endfor %}
	</div>
</div>
{% endif %}
