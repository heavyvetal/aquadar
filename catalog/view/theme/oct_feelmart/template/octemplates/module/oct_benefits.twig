<div id="fm-shop-advantages-{{ module }}" class="row row-padding-top fm-shop-advantages-row">
	{% set key = 0 %}
    {% for oct_benefit in oct_benefits %}
    {% set key = key + 1 %}
        {% if oct_benefit.title[language_id] is defined and oct_benefit.title[language_id] %}
		<div class="col-md-{% if oct_main_class %}{% if loop.last and (oct_class == 4 or oct_class == 12) %}12{% else %}6{% endif %}{% else %}6{% endif %} col-lg-{{ oct_class }}">
			<div class="fm-advantages-block text-center h-100" id="block{{ module }}-{{ key }}">
				<div class="fm-advantages-img">
					<img src="/catalog/view/theme/oct_feelmart/img/icon_poslugy{{ key }}.svg" alt="icon_poslugy{{ key }}">
					<!--i class="{{ oct_benefit.icon }}"></i-->
				</div>
				<div class="fm-advantages-title">
					{% if oct_benefit.link[language_id] is defined and oct_benefit.link[language_id] %}
						<a href="{{ oct_benefit.link[language_id] }}">{{ oct_benefit.title[language_id] }}</a>
					{% else %}
						{{ oct_benefit.title[language_id] }}
					{% endif %}
				</div>
				{% if oct_benefit.text[language_id] is defined and oct_benefit.text[language_id] %}
				<div class="fm-advantages-text">
					{{ oct_benefit.text[language_id] }}
				</div>
				{% endif %}
			</div>
		</div>
		<style>
			{% if oct_benefit.color_icon %}
			#block{{ module }}-{{ key }} .fm-advantages-img {color: {{ oct_benefit.color_icon }};}
			{% endif %}

			{% if oct_benefit.color_title %}
			#block{{ module }}-{{ key }} .fm-advantages-title {color: {{ oct_benefit.color_title }};}
			{% endif %}

			{% if oct_benefit.color_text %}
			#block{{ module }}-{{ key }} .fm-advantages-text {color: {{ oct_benefit.color_text }};}
			{% endif %}

			{% if oct_benefit.color_fon_hover %}
			#block{{ module }}-{{ key }}:hover .fm-advantages-img, #block{{ module }}-{{ key }}:hover .fm-advantages-title {color: {{ oct_benefit.color_fon_hover }};}
			{% endif %}
        </style>
		{% endif %}
	{% endfor %}
</div>
